{{!< default}}
{{> header}}

{{#post}}
    <main>

        <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

            <header class="post-full-header">
                <h1 class="post-full-title"><a href={{url}}>{{title}}</a></h1>
            </header>
            {{#if feature_image}}
            <figure class="post-full-image" style="background-image: url({{feature_image}})">
            </figure>
            {{/if}}

            <section class="post-full-content">
                <div class="post-content recommended-desc">
                    {{content}}
                </div>
            </section>

            
            <section class="books-recommended">
                {{#get "posts" limit="all" include="tags" filter="tags:book"}}
                    {{#foreach posts}}
                        <a class="book book-list-item {{title}}" id="{{tags from="1" to="1" limit="all" visibility="internal" autolink="false"}}" href="{{url}}"><i class="load-icon fas fa-spinner"></i></a>
                    {{/foreach}}
                {{/get}}
            </section>
        </article>
    </main>
{{/post}}
